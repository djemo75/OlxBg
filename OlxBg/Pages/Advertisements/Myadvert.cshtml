@page
@model OlxBg.Pages.Advertisements.MyadvertModel

@{
    ViewData["Title"] = "Моите обяви";
}
<style>
    .category-box {
        display: none !important;
    }
</style>
<section class="mainpage-gallery clr" id="mainpageAds">
    @if (User.IsInRole("Admin"))
    {
        <h3>Контролен панел</h3>
        <p>Като администратор имате достъп за промяна на Категориите - <a href="../../Category/Index">кликни тук</a></p>
    }
        <header style="margin-top:20px;">
            @if (User.IsInRole("Admin"))
            {
                <h3>Всички обяви</h3>
                <p>Като администратор имате достъп за промяне на всички обяви!</p>
            }
            else
            {
                <h3>Моите обяви</h3>
                <p>Тук можеш да управляваш твоите активни и архивирани обяви</p>
            }
        </header>
    <ul class="gallerywide clr normal" id="gallerywide">

        @if (MyadvertModel.Count == 0)
        {
            <div class="no-advert"></div>
            <p style="text-align:center;font-size:15px;line-height:50px;color:#b2b2b2;">
                Нямате добавени обяви<br />
                <a href="../../Advertisements/Create" class="button big4 br3 add cfff large rel" style="margin-bottom:50px;"><span>Добави обява</span></a>
            </p>

        }

        @foreach (var item in Model.Advert)
        {
            <li rel="" class="wrap tleft rel fleft ad_id7Elub " data-adnumber="1" data-id="113050067">
                <div class="mheight tcenter">
                    <div class="buttons-box">
                        <a asp-page="./Edit" asp-route-id="@item.ID">
                            <img src="http://icons-for-free.com/free-icons/png/512/1891025.png" style="height:33px;" class="edit-icon" />
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.ID">
                            <img src="https://antirevokedownload.org/wp-content/uploads/2018/04/Delete-Anti-Revoke.png" style="height:33px;" class="delete-icon" />
                        </a>
                    </div>
                    <a asp-page="./Details" asp-route-id="@item.ID">
                        <img src="~/uploads/@Html.DisplayFor(modelItem => item.ImageName)" style="height:132px;width:171px;">
                    </a>
                </div>
                <div class="inner">
                    <h4 class="normal"><a asp-page="./Details" asp-route-id="@item.ID" class="link linkWithHash detailsLinkPromoted"><strong>@Html.DisplayFor(modelItem => item.Title)</strong></a></h4>
                    <div class="price ">@Html.DisplayFor(modelItem => item.Price) лв.</div>
                </div>
            </li>
        }

    </ul>
</section>
