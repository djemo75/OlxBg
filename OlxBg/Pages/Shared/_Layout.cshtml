                                    </div>
                                </div>
                            </div>


                            <span class="button big4 fright br3">
                                <i data-icon="search"></i>
                                <input id="submit-searchmain" data-cy="homepage_button_search" type="submit" value="Търсене" class="cfff x-large margintop-1">
                            </span>
                        </fieldset>
                    </form>
                    <div class="maincategories">
                        <div class="maincategories-list clr">
                            <partial name="_CategoriesPartial" />

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>



    <section id="body-container">
